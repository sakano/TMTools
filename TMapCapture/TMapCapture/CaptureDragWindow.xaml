<Window x:Class="TMapCapture.CaptureDragWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CaptureDragWindow"
        WindowStyle="None" Topmost="True" ShowInTaskbar="False" AllowsTransparency="True"
        Background="#01FFFFFF" Cursor="Cross"
        >
    <Grid>
        <Canvas>
            <Rectangle Name="rectangle" Fill="#33FF0000" Stroke="#99FF0000" />
            <Line Name="horizontalLine" Stroke="Yellow"/>
            <Line Name="verticalLine" Stroke="Yellow"/>
        </Canvas>
    </Grid>
</Window>
